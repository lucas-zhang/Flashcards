CREATE TABLE user (
  id INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
  username varchar(255) NOT NULL,
  password varchar(255) NOT NULL
);

CREATE table deck (
	id INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
	user_id INT NOT NULL,
	name VARCHAR(255) NOT NULL
);

CREATE table card (
	id INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
	deck_id INT NOT NULL,
	front VARCHAR(255) NOT NULL,
	back VARCHAR(255) NOT NULL
);


insert into user (username, password) values ('lucas', '1234');
insert into user (username, password) values ('tony', '1234');

insert into deck (user_id, name) values (1, 'animals');
insert into deck (user_id, name) values (1, 'planets');

insert into card (deck_id, front, back) values (1, 'big grey animal', 'elephant');
insert into card (deck_id, front, back) values (1, 'tall animal', 'giraffe');

insert into card (deck_id, front, back) values (2, 'hottest planet', 'venus');
insert into card (deck_id, front, back) values (2, 'closest planet to sun', 'mercury');

	select
		*
	from
		user
	inner join
		deck on deck.user_id = user.id
	inner join
		card on card.deck_id = deck.id
	where
		user.id = 1;